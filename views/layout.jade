mixin link(href, name)
	li
		a(class!=attributes.class, href=href)= name

doctype html
html
	head
		script(src="/javascripts/jquery.min.js")
		script(src="/javascripts/layout.js")
		link(rel="stylesheet", href="/stylesheets/style.css")
		block head
	body
		#side-nav
			ul
				- each link in [{href: "/", name: "Home"}, {href: "/resume", name: "Resume"}, {href: "/orbital", name: "Physics Sim"}, {href: "/cuboid", name: "Cuboid Connect"}]
						+link(link.href, link.name)
		#content
			block content
